<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
	</fx:Declarations>
	
	<fx:Metadata>
		[Event(name="chooseClass", type="com.wowzolo.events.ChooseClassEvent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import com.wowzolo.events.ChooseClassEvent;
			
			import mx.controls.Alert;
			[Bindable]
			public var imageFile:String;

			protected function button1_clickHandler(event:MouseEvent):void
			{
				var e:ChooseClassEvent = new ChooseClassEvent(ChooseClassEvent.CHOOSE_CLASS, rogue.label);
				dispatchEvent(e);
			}

		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"
						  gap="50"/>
	</s:layout>
	
	<s:Panel title="Login" width="400">
		<mx:Form >
			<s:HGroup>
				<mx:FormHeading label="Email:" />
				<mx:FormItem>
					<s:TextInput width="100" />
				</mx:FormItem>
			</s:HGroup>
			<s:HGroup>
				<mx:FormHeading label="Password:" />
				<mx:FormItem>
					<s:TextInput id="password" widthInChars="20" />
				</mx:FormItem>
			</s:HGroup>
		</mx:Form>
	</s:Panel>
	
	<s:Panel title="Choose your class" width="400">
		<s:layout>
			<s:HorizontalLayout gap="10" />
		</s:layout>
		
		<s:Button id="rogue" label="Rogue"  click="button1_clickHandler(event)"/>
	</s:Panel>
	
	<s:Panel title="Import data from your Armory"
			 width="400">
		<s:layout>
			<s:HorizontalLayout />
		</s:layout>
		
		<mx:Form>
			<mx:FormHeading label="Region" />
			<mx:FormItem>
				<s:DropDownList>
					<s:ArrayCollection>
						<fx:String id="aa" />
					</s:ArrayCollection>
				</s:DropDownList>
			</mx:FormItem>
			
			<mx:FormHeading label="Character Name" />
			<mx:FormItem>
				<s:TextInput id="playerName" widthInChars="8" />
			</mx:FormItem>
			
			<mx:FormHeading label="Realm" />
			<mx:FormItem>
			</mx:FormItem>
		</mx:Form>
	</s:Panel>
</s:Group>
